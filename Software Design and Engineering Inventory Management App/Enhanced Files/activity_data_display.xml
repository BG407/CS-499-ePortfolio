<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/item_name_hint"
            android:inputType="textCapWords"
            android:importantForAccessibility="yes"
            android:contentDescription="Enter item name"
            android:padding="12dp" />

        <EditText
            android:id="@+id/editItemQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/quantity_hint"
            android:inputType="number"
            android:importantForAccessibility="yes"
            android:contentDescription="Enter item quantity"
            android:padding="12dp"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnAddItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_item"
            android:textAllCaps="false"
            android:padding="12dp"
            android:elevation="4dp"
            android:layout_marginTop="12dp"
            android:contentDescription="Add item to inventory" />

        <TextView
            android:id="@+id/textItemList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/inventory"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:contentDescription="Inventory list label" />
    </LinearLayout>
</ScrollView>
